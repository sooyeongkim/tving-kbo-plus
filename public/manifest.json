{
  "manifest_version": 3,
  "name": "TVING KBO 도우미",
  "version": "1.1.0",
  "description": "TVING에서 KBO시청시 편리한 도구를 제공하는 확장프로그램입니다.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.tving.com/contents/sports/*"],
      "js": ["src/content.ts"]
    }
  ],
  "icons": {
    "128": "image.png"
  }
}
